MainLayout:

<MainLayout@BoxLayout>:
    orientation: "horizontal"  # Split the screen horizontally
    LeftPanel:
        size_hint: (0.3, 1)  # 30% width for the left panel
    RightPanel:
        size_hint: (0.7, 1)  # 70% width for the chat area

<LeftPanel@BoxLayout>:
    orientation: "vertical"
    ScrollView:
        do_scroll_x: False  # Only scroll vertically
        do_scroll_y: True
        GridLayout:
            cols: 1  # Single column for vertical stacking
            size_hint_y: None
            height: self.minimum_height  # Dynamically adjust height to content
            spacing: "10dp"  # Optional spacing
            padding: "10dp"  # Optional padding
            # Add a list of people (buttons as placeholders)
            Button:
                text: "Person 1"
                size_hint_y: None
                height: "50dp"
            Button:
                text: "Person 2"
                size_hint_y: None
                height: "50dp"
