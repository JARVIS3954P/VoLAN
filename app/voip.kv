<RightPanel@BoxLayout>:
    orientation: "vertical"
    Label:
        text: "Chat Area"
        size_hint_y: None
        height: "50dp"  # Header height
        font_size: "20sp"
        bold: True
        halign: "center"
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: "10dp"
            # Chat content (Labels as placeholders for messages)
            Label:
                text: "Hello, how are you?"
                size_hint_y: None
                height: "40dp"
                halign: "left"
            Label:
                text: "I'm good! How about you?"
                size_hint_y: None
                height: "40dp"
                halign: "right"
    TextInput:
        hint_text: "Type a message..."
        size_hint_y: None
        height: "50dp"
